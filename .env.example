# Database
DATABASE_URL="postgresql://user:password@host:5432/dbname"
DIRECT_URL="postgresql://user:password@host:5432/dbname"

# Authentication
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="7d"  # Admin token expiry
CUSTOMER_TOKEN_EXPIRES="30d"  # Customer token expiry

# Domain Configuration
ADMIN_DOMAIN="admin.yourdomain.com"  # Production admin domain
ADMIN_URL="https://admin.yourdomain.com"  # Production admin URL

# Development Settings
# For local development with lvh.me (recommended), use:
# ADMIN_DOMAIN="admin.lvh.me:3000"
# ADMIN_URL="http://admin.lvh.me:3000"
#
# Or for localhost (alternative), use:
# ADMIN_DOMAIN="localhost:3000"
# ADMIN_URL="http://localhost:3000"
#
# Note: Using lvh.me allows for subdomain support in development
# Example store URLs: store1.lvh.me:3000, store2.lvh.me:3000

# Storage (Appwrite)
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
NEXT_PUBLIC_APPWRITE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_APPWRITE_BUCKET_ID="your-bucket-id"

# Security
CORS_ORIGINS="http://localhost:3000,https://admin.yourdomain.com"
API_RATE_LIMIT="100"  # Requests per minute
API_RATE_LIMIT_WINDOW="60000"  # Window size in milliseconds (1 minute)

# Store Settings
DEFAULT_STORE_CURRENCY="USD"
DEFAULT_STORE_LOCALE="en-US"